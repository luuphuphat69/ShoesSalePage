@model PagedList.IPagedList<ShoesSalePage.Models.OrderViewModel>
@using PagedList.Mvc;
@{
    ViewBag.Title = "UserOrder";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using (Html.BeginForm("ShowOrder", "Admin", FormMethod.Get))
{
    <input type="number" id="OrderId" name="OrderId" placeholder="Enter Order ID" />
    <button type="submit">Search</button>
}
<table class="table align-middle mt-4 mb-4 bg-white">
    <thead class="bg-light">
        <tr>
            <th>Order ID</th>
            <th>User ID</th>
            <th>User Name</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone Number</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td><a href="@Url.Action("ShowCart", "Admin")">Details</a></td>
            </tr>
        }
        </tbody>
    </table>
    <div class="text-md-center">
        @Html.PagedListPager(Model, pageNumber => Url.Action("ShowOrder", new { page = pageNumber, OrderId = ViewBag.SearchOrder}))
    </div>

