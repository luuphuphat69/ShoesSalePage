@using PagedList.Mvc;
@model PagedList.IPagedList<ShoesSalePage.Models.Product>
@{
    ViewBag.Title = "Shop";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div class="site-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md-9 order-2">

                <div class="row">
                    <div class="col-md-12 mb-5">
                        <div class="float-md-left mb-4"><h2 class="text-black h5">Shop All</h2></div>
                        <div class="d-flex">
                            <div class="dropdown mr-1 ml-md-auto">
                                <button type="button" class="btn btn-secondary btn-sm dropdown-toggle" id="dropdownMenuOffset" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Filter
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuOffset">
                                    @if (Session["Cate"] != null)
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Shop", "Products", new {Cate = Session["Cate"], filter = "low_to_high"})">Category - Price, low to high</a>
                                        <a class="dropdown-item" href="@Url.Action("Shop", "Products", new {Cate = Session["Cate"], filter = "high_to_low"})">Category - Price, high to low</a>
                                    }
                                    @if (Session["subCate"] != null)
                                    {
                                        Session["Cate"] = null;
                                        <a class="dropdown-item" href="@Url.Action("Shop", "Products", new {subCateId = Session["subCate"], filter = "low_to_high"})">SubCategory - Price, low to high</a>
                                        <a class="dropdown-item" href="@Url.Action("Shop", "Products", new {subCateId = Session["subCate"], filter = "high_to_low"})">SubCategory - Price, high to low</a>
                                    }
                                    @if (Session["Cate"] == null && Session["subCate"] == null)
                                    {
                                        <a class="dropdown-item" href="@Url.Action("Shop", "Products", new {filter = "low_to_high"})">Price, low to high</a>
                                        <a class="dropdown-item" href="@Url.Action("Shop", "Products", new {filter = "high_to_low"})">Price, high to low</a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row mb-5">

                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-lg-4 mb-4">
                            <div class="block-4 text-center border">
                                <figure class="block-4-image">
                                    <a href="~/Products/Details?id=@item.ProductId"><img src="~/Content/Images/ProductImg/@item.Image" alt="Image placeholder" class="img-fluid"></a>
                                </figure>
                                <div class="block-4-text p-4">
                                    <h3><a href="~/Products/Details?id=@item.ProductId">@item.Name</a></h3>
                                    <p class="mb-0 text-danger">@item.Brand</p>
                                    <p class="text-primary font-weight-bold">@String.Format("{0:n0}", item.Price) VND</p>
                                    @if (item.IsAvailable)
                                    {
                                        <p>Còn hàng</p>
                                    }
                                    else
                                    {
                                        <p>Hết hàng</p>
                                    }
                                    <a class="text-decoration-none float-start" href="@Url.Action("Details", "Products", new {id = item.ProductId})"><i class="fas fa-eye text-primary mr-1"></i>View details</a>
                                    <a class="text-decoration-none float-end" href="@Url.Action("AddToCart", "Products", new {id = item.ProductId})"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add to cart</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <div class="site-block-27">
                            <ul>
                                @if (Session["Cate"] != null)
                                {
                                    if (Session["Filter"] != null)
                                    {
                                        <li>
                                            @Html.PagedListPager(Model, pageNumber => Url.Action("Shop", "Products", new { page = pageNumber, Cate = Session["Cate"], filter = Session["Filter"] }))
                                        </li>
                                        Session["Filter"] = null;
                                    }
                                    else if (Session["Filter"] == null){
                                        <li>
                                            @Html.PagedListPager(Model, pageNumber => Url.Action("Shop", "Products", new { page = pageNumber, Cate = Session["Cate"]}))
                                        </li>
                                    }
                                }
                                else if (Session["subCate"] != null)
                                {
                                    if (Session["Filter"] != null)
                                    {
                                        <li>
                                            @Html.PagedListPager(Model, pageNumber => Url.Action("Shop", "Products", new { page = pageNumber, subCateId = Session["subCate"], filter = Session["Filter"] }))
                                        </li>
                                        Session["Filter"] = null;
                                    }
                                    else if (Session["Filter"] == null) {
                                        <li>
                                            @Html.PagedListPager(Model, pageNumber => Url.Action("Shop", "Products", new { page = pageNumber, subCateId = Session["subCate"] }))
                                        </li>
                                    }
                                }
                                @if (Session["Filter"] != null && Session["Cate"] == null && Session["subCate"] == null)
                                {
                                    <li>
                                        @Html.PagedListPager(Model, pageNumber => Url.Action("Shop", "Products", new { page = pageNumber, filter = Session["Filter"] }))
                                    </li>
                                    Session["Filter"] = null;
                                }
                                else if (Session["Filter"] == null && Session["Cate"] == null && Session["subCate"] == null)
                                {
                                    <li>
                                        @Html.PagedListPager(Model, pageNumber => Url.Action("Shop", "Products", new { page = pageNumber}))
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 order-1 mb-5 mb-md-0">
                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Categories</h3>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><a href="@Url.Action("Shop", "Products", new {Cate = "Men"})" class="d-flex text-decoration-none"><span>Nam</span> <span class="text-black ml-auto"> (Men)</span></a></li>
                        <li class="mb-1"><a href="@Url.Action("Shop", "Products", new {Cate = "Woman"})" class="d-flex text-decoration-none"><span>Nữ</span> <span class="text-black ml-auto"> (Women)</span></a></li>
                        <li class="mb-1"><a href="@Url.Action("Shop", "Products", new {Cate = "Accessories"})" class="d-flex text-decoration-none"><span>Phụ kiện</span> <span class="text-black ml-auto">(Accessories)</span></a></li>
                    </ul>
                </div>

                <div class="border p-4 rounded mb-4">
                    <h3 class="mb-3 h6 text-uppercase text-black d-block">Size/Width</h3>
                    <div class="col-sm-12">
                        <div class="side mb-1 border-1">
                            <div class="block-26 mb-2">
                                <ul>
                                    <li><a class="text-decoration-none" href="#">36</a></li>
                                    <li><a class="text-decoration-none" href="#">37</a></li>
                                    <li><a class="text-decoration-none" href="#">38</a></li>
                                    <li><a class="text-decoration-none" href="#">39</a></li>
                                    <li><a class="text-decoration-none" href="#">40</a></li>
                                    <li><a class="text-decoration-none" href="#">41</a></li>
                                    <li><a class="text-decoration-none" href="#">42</a></li>
                                    <li><a class="text-decoration-none" href="#">42.5</a></li>
                                    <li><a class="text-decoration-none" href="#">43</a></li>
                                    <li><a class="text-decoration-none" href="#">43.5</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <h3 class="mb-3 h6 text-uppercase text-black d-block">Color</h3>
                        <a href="#" class="d-flex color-item align-items-center text-decoration-none">
                            <span class="bg-danger color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Red (2,429)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center text-decoration-none">
                            <span class="bg-success color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Green (2,298)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center text-decoration-none">
                            <span class="bg-primary color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Blue (1,075)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center text-decoration-none">
                            <span class="bg-warning color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Yellow (1,075)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center text-decoration-none">
                            <span class="bg-light color d-inline-block rounded-circle mr-2"></span> <span class="text-black">White(750)</span>
                        </a>
                        <a href="#" class="d-flex color-item align-items-center text-decoration-none">
                            <span class="bg-dark color d-inline-block rounded-circle mr-2"></span> <span class="text-black">Black (175)</span>
                        </a>
                    </div>

                </div>
                    </div>
        </div>
    </div>
</div>