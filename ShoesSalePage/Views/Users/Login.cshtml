@model ShoesSalePage.Models.User
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm("Login", "Users", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <!-- User Name input -->
    <div class="form-group">
        @Html.LabelFor(m => m.UserName)
        @Html.TextBoxFor(m => m.UserName, "", new { @class = "form-control", @placeholder = "Tên tài khoản" })

    </div>
    <!-- Password input -->
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Mật khẩu" })
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <!-- Checkbox -->
        <div class="form-check mb-0">
            <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3" />
            <label class="form-check-label" for="form2Example3">
                Nhớ tài khoản
            </label>
        </div>
    </div>
    <div class="text-center text-lg-start mt-4 pt-2">
        <div class="form-group">
            <input type="submit" name="submit" class="btn btn-outline-primary" value="Login" />
        </div>
        <p class="small fw-bold mt-2 pt-1 mb-0">
            Chưa có tài khoản? <a href="~/Users/Register" class="link-danger">Đăng ký</a>
        </p>
        <p class="small fw-bold mt-2 pt-1 mb-0">
            Đăng nhập dưới tư cách <a href="~/Admin/Login" class="link-danger">Quản trị viên</a>
        </p>
    </div>
}

